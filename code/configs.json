{
    "max_scroll_tries":  2,
    "scroll_size":     100,
    "max_extract_time": 10,
    "max_val_len":     512,

    "refobjs": [ "anystyle_references_from_cermine_fulltext",
                 "anystyle_references_from_cermine_refstrings",
                 "anystyle_references_from_grobid_fulltext",
                 "anystyle_references_from_grobid_refstrings",
                 "anystyle_references_from_pdftotext_fulltext",
                 "cermine_references_from_cermine_xml",
                 "cermine_references_from_grobid_refstrings",
                 "grobid_references_from_grobid_xml",
                 "exparser_references_from_cermine_layout" ],

    "ids": null,

    "chunk_size_sowiport":      10,
    "chunk_size_crossref":      10,
    "chunk_size_dnb":           10,
    "chunk_size_openalex":      10,
    "chunk_size_arxiv":         10,
    "chunk_size_ssoar":         10,
    "chunk_size_gesis_bib":     10,
    "chunk_size_research_data": 10,
    "chunk_size_econbiz":       10,

    "requestimeout_sowiport":      60,
    "requestimeout_crossref":      60,
    "requestimeout_dnb":           60,
    "requestimeout_openalex":      60,
    "requestimeout_arxiv":         60,
    "requestimeout_ssoar":         60,
    "requestimeout_gesis_bib":     60,
    "requestimeout_research_data": 60,
    "requestimeout_econbiz":       60,

    "great_score_sowiport":      [100,50],
    "great_score_crossref":      [100,50],
    "great_score_dnb":           [100,50],
    "great_score_openalex":      [100,50],
    "great_score_arxiv":         [100,50],
    "great_score_ssoar":         [100,50],
    "great_score_gesis_bib":     [100,50],
    "great_score_research_data": [100,50],
    "great_score_econbiz":       [100,50],

    "ok_score_sowiport":      [50,25],
    "ok_score_crossref":      [50,25],
    "ok_score_dnb":           [50,25],
    "ok_score_openalex":      [50,25],
    "ok_score_arxiv":         [50,25],
    "ok_score_ssoar":         [50,25],
    "ok_score_gesis_bib":     [50,25],
    "ok_score_research_data": [50,25],
    "ok_score_econbiz":       [50,25],

    "max_rel_diff_sowiport":      [0.7,0.5],
    "max_rel_diff_crossref":      [0.7,0.5],
    "max_rel_diff_dnb":           [0.7,0.5],
    "max_rel_diff_openalex":      [0.7,0.5],
    "max_rel_diff_arxiv":         [0.7,0.5],
    "max_rel_diff_ssoar":         [0.7,0.5],
    "max_rel_diff_gesis_bib":     [0.7,0.5],
    "max_rel_diff_research_data": [0.7,0.5],
    "max_rel_diff_econbiz":       [0.7,0.5],

    "threshold_sowiport":      0.25,
    "threshold_crossref":      0.25,
    "threshold_dnb":           0.25,
    "threshold_openalex":      0.25,
    "threshold_arxiv":         0.25,
    "threshold_ssoar":         0.25,
    "threshold_gesis_bib":     0.25,
    "threshold_research_data": 0.25,
    "threshold_econbiz":       0.25,

    "thr_prec_sowiport":      0.85,
    "thr_prec_crossref":      0.85,
    "thr_prec_dnb":           0.85,
    "thr_prec_openalex":      0.85,
    "thr_prec_arxiv":         0.85,
    "thr_prec_ssoar":         0.85,
    "thr_prec_gesis_bib":     0.85,
    "thr_prec_research_data": 0.85,
    "thr_prec_econbiz":       0.85,

    "recheck_sowiport":      false,
    "recheck_crossref":      false,
    "recheck_dnb":           false,
    "recheck_openalex":      false,
    "recheck_arxiv":         false,
    "recheck_ssoar":         false,
    "recheck_gesis_bib":     false,
    "recheck_research_data": false,
    "recheck_econbiz":       false,

    "use_buffered": true,

    "date_weight": 100,

    "logfile": "matching.log",
    "buffer_db": "queries.db",
    "do_log": false,
    "regex_year": "1[5-9][0-9]{2}|20(0[0-9]|1[0-9]|2[0-3])",
    "regex_namesep": "\\W",
    "regex_garbage": "\\W",
    "regex_sourcekey": "source\\['[A-Za-z|_|-]+[1-9|A-Za-z|_|-]*'\\]",

    "ssoar_query_fields":         ["title","authors.name","doi"],
    "sowiport_query_fields":      ["title","coreAuthor","coreJournalTitle","institutions","corePublisher"],
    "research_data_query_fields": ["title","person","source","publisher","doi"],
    "openalex_query_fields":      ["title","authorships.author.display_name","host_venue","doi"],
    "gesis_bib_query_fields":     ["title","coreAuthor","source"],
    "econbiz_query_fields":       ["title","authors","publishers","doi"],
    "dnb_query_fields":           ["title","authors","titles","publishers","editors"]

}
